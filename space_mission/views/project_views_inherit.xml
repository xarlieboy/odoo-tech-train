<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <record model="ir.ui.view" id="project_edit_project_inherit_space_mission">
        <field name="name">project.edit.project.inherit.space.mission</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="mission_id"/>
            </field>
        </field>
    </record>
    <record model="ir.ui.view" id="project_project_view_form_simplified_inherit_space_mission">
        <field name="name">project.project.view.form.simplified.inherit.space.mission</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.project_project_view_form_simplified"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="mission_id" class="o_project_name oe_inline"/>
            </field>
        </field>
    </record>
</odoo>